@model IEnumerable<iVoteMVC.Models.Session>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @using (Html.BeginForm())
    {
    <p>
        @Html.TextBox("SearchString")
        <input type="submit" value="Filter" />
    </p>
    }
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.name)*@
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortOrderParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.dateCreated)*@
            @Html.ActionLink("Created", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.dateModifed)*@
            @Html.ActionLink("Modified", "Index", new { sortOrder = ViewBag.DateModSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.published)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.name)*@
            @Html.ActionLink(item.name, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateModifed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.published)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>


